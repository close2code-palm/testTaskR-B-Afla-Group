doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="testBuy.css")
    script
      include finalchoice.js 
    title Document
  body
    mixin plan(plannum,cost)
      div.choice
        span.radio__input
          input.radio(type="radio", name="License")
          label.radio
            span.radio__control
            span.radio__label 
            | LICENSE PLAN##{plannum}
            span.radio__description #{cost}$ per license
        
    form(action="submit", method="post") 
      div.plans
        +plan(1,13)
        +plan(2,22)
        +plan(3,34)
      hr
      span.quant 
        label Number of licenses: 
        select.quant__options(name="licences")
          option(value='10' selected) 10
          option(value='20') 20 
          option(value='30') 30
      hr
      span.order-price
        span TOTAL: 
        span.finalPrice
          sup US
      button(type="submit") BUY NOW
      span.urchoice 
        sapn.useplan Selected plan:  #
        span.dynPlan

    